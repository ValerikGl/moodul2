{% extends "layout.njk" %}

{% set title = "SpectraX Hoodie" %}

{% block content %}
<section class="max-w-7xl mx-auto px-6 py-16 grid grid-cols-1 lg:grid-cols-2 gap-16">


  <div class="flex justify-center">
    <div class="relative rounded-2xl overflow-hidden bg-gradient-to-br from-purple-600/40 to-black p-6">
      <img
        src="/shop/spectrax-hoodie.png"
        alt="SpectraX Hoodie"
        class="w-full max-w-md drop-shadow-[0_0_40px_rgba(168,85,247,0.6)]"
      />
    </div>
  </div>

 
  <div class="flex flex-col justify-center gap-6">


    <h1 class="text-4xl xl:text-5xl font-bold tracking-widest">
      SPECTRA<span class="text-purple-500">X</span> HOODIE
    </h1>


    <div class="flex items-center gap-4 text-xl">
      <span class="text-purple-500 font-semibold">$80</span>
      <span class="line-through text-gray-500">$100</span>
    </div>


    <div class="flex items-center gap-4">
      <span class="text-sm text-gray-400">Select color:</span>
      <button class="w-6 h-6 rounded-full bg-black border-purple-500 ring-2 ring-purple-500"></button>
      <button class="w-6 h-6 rounded-full bg-white"></button>
    </div>

  
    <div class="flex items-center gap-4">
      <span class="text-sm text-gray-400">Sizes:</span>
      <div class="flex gap-2">
        {% for size in ["S","M","L","XL"] %}
        <button
          class="px-4 py-2 border border-gray-600 rounded-lg hover:border-purple-500 hover:text-purple-500 transition">
          {{ size }}
        </button>
        {% endfor %}
      </div>
    </div>


    <p class="text-gray-400 max-w-md leading-relaxed">
      Premium SpectraX hoodie with soft inner lining and futuristic purple accents.
    </p>


    <div class="flex gap-4 mt-4">
      <button
        class="px-8 py-3 border border-white rounded-xl hover:bg-white hover:text-black transition">
        Buy Now
      </button>
      <button
        class="px-8 py-3 bg-purple-500 rounded-xl hover:bg-purple-600 transition">
        Add to Cart
      </button>
    </div>

   
    <div class="grid grid-cols-3 gap-4 mt-8 text-sm text-center">
      <div class="bg-white/5 p-4 rounded-xl">
        Free Delivery<br><span class="text-purple-400">1â€“2 day</span>
      </div>
      <div class="bg-white/5 p-4 rounded-xl">
        In Stock<br><span class="text-purple-400">Today</span>
      </div>
      <div class="bg-white/5 p-4 rounded-xl">
        Guaranteed<br><span class="text-purple-400">1 year</span>
      </div>
    </div>

  </div>
</section>
{% endblock %}
